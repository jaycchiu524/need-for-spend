{
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "incremental": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2020",
    "sourceMap": true,
    "lib": [
      "esnext"
    ],  
    "noEmit": false,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@finme/*": [
        "packages/*/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "packages/client"
    },
    {
      "path": "packages/server"
    }
  ],
  "include": ["**/*.ts", "**/*.tsx", "packages/server/tests/global/teardown.js", "packages/server/tests/global/teardown.js", "packages/server/tests/global/setup.js", "packages/server/tests/global/setup.js"],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}